<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
    <application>
        <el-resolver>e.util.JsfCrudELResolver</el-resolver>
    </application>
    <navigation-rule>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/welcomeJSF.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>customer</managed-bean-name>
        <managed-bean-class>e.CustomerController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customerJpa</managed-bean-name>
        <managed-bean-class>e.CustomerJpaController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>e.Customer</converter-for-class>
        <converter-class>e.CustomerConverter</converter-class>
    </converter>
    <navigation-rule>
        <navigation-case>
            <from-outcome>customer_create</from-outcome>
            <to-view-id>/jsf/customer/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>customer_list</from-outcome>
            <to-view-id>/jsf/customer/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>customer_edit</from-outcome>
            <to-view-id>/jsf/customer/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>customer_detail</from-outcome>
            <to-view-id>/jsf/customer/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>discountCode</managed-bean-name>
        <managed-bean-class>e.DiscountCodeController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>discountCodeJpa</managed-bean-name>
        <managed-bean-class>e.DiscountCodeJpaController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>e.DiscountCode</converter-for-class>
        <converter-class>e.DiscountCodeConverter</converter-class>
    </converter>
    <navigation-rule>
        <navigation-case>
            <from-outcome>discountCode_create</from-outcome>
            <to-view-id>/jsf/discountCode/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>discountCode_list</from-outcome>
            <to-view-id>/jsf/discountCode/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>discountCode_edit</from-outcome>
            <to-view-id>/jsf/discountCode/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>discountCode_detail</from-outcome>
            <to-view-id>/jsf/discountCode/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>

