<component name="GlasFish Configurator Plugin" releaseDate="2008-12-16"
    version="0.0.1">
    <package no-download="no">
        <size os="win32">TODO</size>
        <size os="macosx">TODO</size>
        <size os="linux">TODO</size>
    </package>
    <shortdescription>Configures glassfish for workspace.
    </shortdescription>
    <status>packaged</status>
    <eclipse-help>don't know</eclipse-help>
    <description />
    <getting-started />
    <changelog release="1.2.2">
        <entry date="2008-12-16" type="creation" />
    </changelog>
    <build patched="no" type="binary">
        <antscript target="process-gfplugins">
            <project>
                <target name="fetch-gfplugins" unless="gfplugins-already-fetched">

                    <property name="gfplugins.download.folder"
                        value="${components.download.folder}/glassfish-cvs" />

                    <mkdir dir="${gfplugins.download.folder}" />

                    <cvs cvsRoot=":pserver:${cvs.user}@cvs.dev.java.net:/cvs"
                        package="glassfishplugins/eclipse-support" dest="${gfplugins.download.folder}" />

                    <!--
                        only fetch once per build, to ensure that all
                        the build is done on the same code...
                    -->
                    <property name="gfplugins-already-fetched"
                        value="true" />
                </target>
                <target depends="fetch-gfplugins" name="process-gfplugins">
                    <property name="gfplugins.download.folder"
                        value="${components.download.folder}/glassfish-cvs" />
                    <!--
                        we can't use
                        ${components.work.folder}/${component.id}-${component.version}
                        because it's already used by the EE build !
                    -->
                    <property name="gfplugins.work.folder"
                        value="${components.work.folder}/sourcebuild-${component.id}-${component.version}" />
                    <!--
                        force a clean build by deleting the work folder.
                        This is cleaner for the Cruise Control build
                    -->
                    <mkdir dir="${gfplugins.work.folder}" />
                    <delete dir="${gfplugins.work.folder}" />
                    <mkdir dir="${gfplugins.work.folder}" />
                    <mkdir dir="${gfplugins.work.folder}/plugins" />
                    <mkdir dir="${gfplugins.work.folder}/features" />
                    <copy todir="${gfplugins.work.folder}/plugins">
                        <fileset
                            dir="${gfplugins.download.folder}/glassfishplugins/eclipse-support/plugins/"
                            includes="*configurator*/**" />
                    </copy>
                    <copy todir="${gfplugins.work.folder}/features">
                        <fileset
                            dir="${gfplugins.download.folder}/glassfishplugins/eclipse-support/features"
                            includes="*configurator*/**" />
                    </copy>

                    <copy todir="${gfplugins.work.folder}/plugins">
                        <fileset
                            dir="${gfplugins.download.folder}/glassfishplugins/eclipse-support/plugins/"
                            includes="*help*/**" />
                    </copy>
                    <copy todir="${gfplugins.work.folder}/features">
                        <fileset
                            dir="${gfplugins.download.folder}/glassfishplugins/eclipse-support/features"
                            includes="*help*/**" />
                    </copy>

                    <!-- this value should be set by the main build.xml -->
                    <build-feature-from-sources-with-base
                        builddirectory="${gfplugins.work.folder}"
                        componentId="${component.id}" distributionName="${dist.name}"
                        featureId="com.sun.enterprise.jst.server.sunappsrv.configurator.feature"
                        qualifier="dev" />
                    <build-feature-from-sources-with-base
                        builddirectory="${gfplugins.work.folder}"
                        componentId="${component.id}" distributionName="${dist.name}"
                        featureId="com.sun.enterprise.jst.server.sunappsrv.help.feature"
                        qualifier="dev" />
                        </target>
            </project>
        </antscript>
    </build>
