<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
    <managed-bean>
        <managed-bean-name>author</managed-bean-name>
        <managed-bean-class>jsfcontrollers.AuthorController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>jpas.Author</converter-for-class>
        <converter-class>jsfcontrollers.AuthorConverter</converter-class>
    </converter>
    <navigation-rule>
        <navigation-case>
            <from-outcome>author_create</from-outcome>
            <to-view-id>/author/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>author_list</from-outcome>
            <to-view-id>/author/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>author_edit</from-outcome>
            <to-view-id>/author/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>author_detail</from-outcome>
            <to-view-id>/author/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>book</managed-bean-name>
        <managed-bean-class>jsfcontrollers.BookController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <converter>
        <converter-for-class>jpas.Book</converter-for-class>
        <converter-class>jsfcontrollers.BookConverter</converter-class>
    </converter>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_create</from-outcome>
            <to-view-id>/book/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_list</from-outcome>
            <to-view-id>/book/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_edit</from-outcome>
            <to-view-id>/book/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>book_detail</from-outcome>
            <to-view-id>/book/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
